@{
    ViewBag.Title = "Index";
}
<head>
    <title>Categories</title>
</head>
<body>
    <h1>Catalog:</h1>
    <div>
        <label for="searchBreed"> Breed:
            <select name="searchBreed" id="searchBreed">
                @{
                    for (int i = 0; i < 5; i++)
                    {
                        <option value="modelDogExample"> dog @i </option>
                    }
                }
            </select>
        </label>
        <label for="searchSize"> Size:
            <select name="searchSize" id="searchSize">
                @{
                    for (int i = 0; i < 4; i++)
                    {
                        <option value="enumSizeExample"> size @i </option>
                    }
                }
            </select>
        </label>
        <label for="searchSex"> Gender:
            <select name="searchSex" id="searchSex">
                @{
                for (int i = 0; i < 2; i++)
                {
                     <option value="enumGenderExample"> gender @i </option>
                }
            }
            </select>
        </label>
        <label for="searchAge"> Age:></label>
        <input type="range" name="searchAge" id="searchAge">
        <input type="search" placeholder="Search.." />
    </div>
    <div>
        <div>
            @{
                for (int i = 0; i < 2; i++)
                {
                    <div><button> Category @i </button> </div>
                }
            }
        </div>
        <div>
            @{
                for (int i = 0; i < 3; i++)
                {
                    <div>
                        <img>
                        <p>name: @i age: @i</p>
                        <p>size: @i gender: @i</p>
                        <button> Profile @i </button>
                    </div>
                }
            }
        </div>
    </div>
</body>
