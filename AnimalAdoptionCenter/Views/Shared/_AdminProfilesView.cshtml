@foreach (var animal in Model)
{
    <div class="animal-profile" id="profile" name="profile">
        <div>
            <img class="animal-profile-img" alt="@animal.SubCategory profile picture" src="@animal.ProfileImagePath">
        </div>
        <div class="animal-profile-content">
            <header>Name: @animal.Name</header>
            <p>Id: @animal.Id</p>
            @{
                @if (animal.CategoryId == 1 || animal.CategoryId == 2)
                {
                    <p>Breed: @animal.SubCategory</p>
                }
                else
                {
                    <p>Species: @animal.SubCategory</p>
                }

            }
            <p>Age: @animal.Age</p>
            <p>Sex: @animal.Sex</p>
            <p>Size: @animal.Size</p>
            <p>Status: @animal.Status</p>
            <form asp-action="Index" asp-controller="AnimalProfile" asp-route-id="@animal.Id">
                <button type="submit"> Profile </button>
            </form>
            <form asp-action="Index" asp-controller="Profile" asp-route-id="@animal.Id">
                <button type="submit"> Edit </button>
            </form>
            <form asp-action="Index" asp-controller="Profile" asp-route-id="@animal.Id">
                <button type="submit"> Delete </button>
            </form>
        </div>
    </div>
}